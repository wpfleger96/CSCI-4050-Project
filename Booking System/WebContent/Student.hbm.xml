<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   <class name = "entity.Student" table = "Users">

      <meta attribute = "class-description">
         This class contains user attributes.
      </meta>

      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>

      <!-- 		Name in Java class				Name in Database							Type in Java class -->
      <property name = "firstName" 				column = "firstName" 				type = "string"/>
      <property name = "lastName" 				column = "lastName" 				type = "string"/>
      <property name = "email" 				    column = "lastName" 				type = "string"/>
      <property name = "password" 				column = "lastName" 				type = "string"/>
      <property name = "type" 				    column = "lastName" 				type = "string"/>
      <property name = "verified" 				column = "lastName" 				type = "string"/>
   </class>
</hibernate-mapping>
